<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/myTextField"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/enter_your_guessed_number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:autofillHints="" tools:targetApi="o" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="@string/i_m_thinking_of_a_number_between_1_to_20"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="116dp"
        android:layout_marginLeft="117dp"
        android:layout_marginRight="116dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="20dp"
        android:text="@string/can_you_guess_it"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@+id/myTextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:onClick="guess"
        android:text="@string/guess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextField" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="139dp"
        android:layout_height="21dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="229dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="229dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="297dp"
        android:text="@string/_2019_arpit_raj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</android.support.constraint.ConstraintLayout>
